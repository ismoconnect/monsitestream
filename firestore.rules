rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FONCTIONS HELPER ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Vérifie si l'utilisateur est admin (sécurisé)
    // On vérifie que le document existe ET que le rôle est 'admin'
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- RÈGLES PAR COLLECTION ---

    // Utilisateurs
    match /users/{userId} {
      // L'admin peut tout lister. Le client ne peut voir que son doc.
      allow list: if isAdmin();
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId) || isAdmin();
      
      // Sous-collections (appointments, notifications, messages privés...)
      match /{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // PAIEMENTS
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // GALERIE
    match /gallery/{galleryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Logs Admin
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }

    // Conversations (Chat)
    match /conversations/{conversationId} {
      // Lecture : Participants ou Admin
      allow read: if isAuthenticated() && (
        isAdmin() || 
        request.auth.uid in resource.data.participants ||
        "admin" in resource.data.participants
      );
      
      // Création : Utilisateur authentifié (doit s'inclure dans les participants)
      allow create: if isAuthenticated() && (
        request.auth.uid in request.resource.data.participants ||
        isAdmin()
      );
      
      // Mise à jour : Pour actualiser lastMessage ou lastMessageAt
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.participants || 
        isAdmin()
      );
    }

    // Messages (Chat)
    match /messages/{messageId} {
      // Lecture/Création : Temporairement permis pour TOUT le monde authentifié pour debug
      allow read, create: if isAuthenticated();
      
      // Mise à jour/Suppression : Expéditeur ou Admin
      allow update, delete: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        isAdmin()
      );
    }
    
    // Présence (Status en ligne)
    match /presence/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || (userId == 'admin' && isAdmin());
    }
    
    // Indicateurs de frappe (Typing)
    match /typing/{docId} {
      allow read, write: if isAuthenticated();
    }
  }
}
