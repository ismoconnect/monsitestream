rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FONCTIONS HELPER ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Vérifie si l'utilisateur est admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- RÈGLES PAR COLLECTION ---

    // 1. COLLECTION GALERIE (Le plus important pour vous maintenant)
    match /gallery/{document=**} {
      allow read: if true; // Public: tout le monde peut voir
      allow write: if isAdmin(); // Sécurisé: seul l'admin peut modifier
    }

    // 2. UTILISATEURS
    match /users/{userId} {
      allow list: if isAdmin();
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId) || isAdmin();
      
      // Sous-collections (appointments, notifications, messages privés...)
      match /{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // 3. PAIEMENTS
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // 4. RENDEZ-VOUS GLOBAL (Collection Group pour l'Admin)
    match /{path=**}/appointments/{appointmentId} {
      allow read: if isAdmin();
    }

    // 5. LOGS ADMIN
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }

    // 6. CHAT & MESSAGES
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && (
        isAdmin() || 
        request.auth.uid in resource.data.participants ||
        "admin" in resource.data.participants
      );
      
      allow create: if isAuthenticated() && (
        request.auth.uid in request.resource.data.participants ||
        isAdmin()
      );
      
      allow update: if isAuthenticated() && (
        request.auth.uid in resource.data.participants || 
        isAdmin()
      );
    }

    match /messages/{messageId} {
      allow read, create: if isAuthenticated();
      
      allow update, delete: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        isAdmin()
      );
    }
    
    match /presence/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || (userId == 'admin' && isAdmin());
    }
    
    match /typing/{docId} {
      allow read, write: if isAuthenticated();
    }
  }
}
